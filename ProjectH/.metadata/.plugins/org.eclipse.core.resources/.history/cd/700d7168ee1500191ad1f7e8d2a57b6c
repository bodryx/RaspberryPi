package net.bodrykh.raspberrypi;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Chat implements ActionListener{
	JButton button;
	JFrame frame;
	JTextField userInput;
	JTextArea chatLog;
	
	public static void main(String args[]) {
	Chat chatGui = new Chat();
	chatGui.go();
	}
	
	
	public void go() {
		frame = new JFrame();
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		button = new JButton("Click me");
		button.addActionListener(this);
		
		
		userInput = new JTextField(20);
		userInput.setText("hello there");
		//userInput.addActionListener(chatActionListener);
		
		chatLog = new JTextArea(10,20);
		JScrollPane scroller = new JScrollPane(chatLog);
		chatLog.setLineWrap(true);
		
		
		frame.getContentPane().add(BorderLayout.NORTH,userInput);
		frame.getContentPane().add(BorderLayout.SOUTH,button);
		frame.setSize(300, 300);

		frame.setVisible(true);

		
		
		//------
		String str = "How are you?";
		str = str.replace(" ", "_");
		System.out.println(str);
		Process p;
		try {
			p = Runtime.getRuntime().exec("espeak -s120 " + str + " 2>/dev/null");
			p.waitFor();
			System.out.println("exit: " + p.exitValue());
			p.destroy();
		} catch (Exception e) {
		}

	}


	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		button.setText("I've been clicked!");
		
	}
}
